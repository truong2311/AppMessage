<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".activities.Chat1vs1Activity"
    android:id="@+id/rlChat1vs1">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvMessageofUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lnChatLayout">

    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/lnChatLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/ibAttach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_attach"
            style="?android:attr/borderlessButtonStyle"/>
        <EditText
            android:id="@+id/edtEnterMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/message"
            android:padding="10dp"
            android:layout_weight="5"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/ibSend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_send_message"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
</RelativeLayout>