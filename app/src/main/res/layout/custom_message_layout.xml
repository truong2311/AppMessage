<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingVertical="5dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivReceiverProfileImageMessage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/avatar"/>

    
    <ImageView
        android:id="@+id/ivSenderMessage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/tvdateSenderMessageImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ivSenderMessage"
        android:textSize="12sp"
        android:text="date"/>

    <ImageView
        android:id="@+id/ivReceiverMessage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop" />
    <TextView
        android:id="@+id/tvdateReceiverMessageImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivReceiverMessage"
        android:layout_marginStart="60dp"
        android:textSize="12sp"
        android:text="date"/>
    <TextView
        android:id="@+id/tvReceiverMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/ivReceiverProfileImageMessage"
        android:background="@drawable/receiver_message_layout"
        android:text="receriver messsage"
        android:padding="10dp"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/tvdateReceiverMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvReceiverMessage"
        android:layout_marginStart="60dp"
        android:textSize="12sp"
        android:text="date"/>
    <TextView
        android:id="@+id/tvSenderMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/sender_message_layout"
        android:text="sender message"
        android:textSize="16sp"
        android:padding="10dp" />
    <TextView
        android:id="@+id/tvdateSenderMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvSenderMessage"
        android:textSize="12sp"
        android:text="date"/>
</RelativeLayout>